#include "sefafx.h"

int GetFileSize(const char* pszPath_)
{
  struct stat _sBuf;
  if (stat(pszPath_, &_sBuf))
  {
    return -1;
  }
  
  return (int)_sBuf.st_size;
}

int GetFileSize(int fd_)
{
  struct stat _sBuf;
  if (fstat(fd_, &_sBuf))
  {
    return -1;
  }
  
  return (int)_sBuf.st_size;
}